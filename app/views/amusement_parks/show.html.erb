<h1><%= @amusement_park.name %></h1>
<h2>Admissions: $<%= @amusement_park.admission_price %></h2>

<section class="park-rides-index">
  <% @amusement_park.rides.each do |ride| %>
    <p><%= ride.name %></p>
  <% end %>
</section>
<section class="park-rides-stats">
  <p>Average Thrill Rating of Rides: <%= @amusement_park.average_thrill_rating %>/10</p>
</section>
